<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fauzi.muhammad.musicmatch.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_hasil_cari"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPencarian"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewJudul" />

    <TextView
        android:id="@+id/textViewJudul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin"
        android:text="Lagu Populer"
        android:textAlignment="center"
        android:textColor="@color/orangeTerang"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPencarian"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_button"
        android:fontFamily="@font/aladin"
        android:text="Pencarian"
        android:textColor="#e6eaf2"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressBar"
        style="@style/SpinKitView.Large.Wave"
        android:layout_width="294dp"
        android:layout_height="518dp"
        android:layout_gravity="center"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="200dp"
        android:layout_weight="1"
        app:SpinKit_Color="@color/orangeTerang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
